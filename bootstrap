#!/bin/bash

dir=$(pwd)
sudo apt update
sudo apt upgrade
sudo apt remove -y firefox libreoffice-* ubuntu-web-launchers
cp -r $(cat precious) $HOME/
echo "[[ -f \$HOME/.bashrc.mike ]] && . \$HOME/.bashrc.mike" >> $HOME/.bashrc
sudo apt install -y git build-essential meld python3 python3-dev golang clang clang-format cmake make ninja-build nodejs npm openjdk-9-jdk vim tmux vim valgrind golang-golang-x-tools fonts-hack-ttf net-tools chromium-browser openssh-server 
git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim
vim -c 'VundleInstall' -c 'qa!'
cd $HOME/.vim/bundle/YouCompleteMe/
python3 ./install.py --clang-completer --go-completer --js-completer
cd $dir
dconf load / < gsettings
cd $HOME
mkdir comdb2
git clone https://github.com/mponomar/comdb2 comdb2/src
sudo apt install -y build-essential cmake bison flex libprotobuf-c-dev libreadline-dev libsqlite3-dev libssl-dev libunwind-dev libz1 libz-dev make gawk protobuf-c-compiler uuid-dev liblz4-tool liblz4-dev libprotobuf-c1 libsqlite3-0 libuuid1 libz1 tzdata ncurses-dev tcl bc
ssh-keygen  -N '' -f ~/.ssh/id_rsa
